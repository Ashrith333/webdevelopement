<%- include('partials/header') -%>
<div class= "container">
<div class = "jumbotron">
    <h1>Welcome to Campground</h1>
    <p>
    
        <a class ="btn btn-primary btn-large" href="/campgrounds/new"> Add image </a>
    </p>
</div>
<div class ="row " style="display-flex; flex-wrap: wrap;"></div>
    <% campground.forEach(function(campground){ %>
    <div class="col-4 col-md-4">
        <div class ="thumbnail">
        <img src="<%= campground.image %>">
        <div class="caption">
            <h4> <%= campground.name %></h4>
        </div>
        </div>
    </div>
    <% }) %>
</div>
<%- include("partials/footer") -%>